<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_event"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/date_event"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:gravity="left|center_vertical"
        android:text="Date"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout_event"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout_event" />

    <TextView
        android:id="@+id/time_event"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:gravity="left|center_vertical"
        android:text="Time"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout_event"
        app:layout_constraintTop_toBottomOf="@+id/date_event" />

    <TextView
        android:id="@+id/title_event"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:gravity="left|center_vertical"
        android:text="Title"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintLeft_toRightOf="@+id/date_event"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout_event" />

    <TextView
        android:id="@+id/description_event"
        android:layout_width="384dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:gravity="left|center_vertical"
        android:textAppearance="?attr/textAppearanceListItem"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout_event"
        app:layout_constraintTop_toBottomOf="@+id/title_event"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout_event" />

    <ImageView
        android:id="@+id/ic_arrow_down_events"
        app:layout_constraintLeft_toRightOf="@+id/title_event"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout_event"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical|end"
        app:srcCompat="@drawable/ic_arrow_down" />


</android.support.constraint.ConstraintLayout>
