<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:id="@+id/constraintLayout_topic">

<TextView
    android:id="@+id/id_topic"
    android:layout_width="190dp"
    android:layout_height="44dp"
    android:textAppearance="?attr/textAppearanceListItem"
    android:text="Title"
    android:layout_alignParentStart="true"
    app:layout_constraintTop_toTopOf="@+id/constraintLayout_topic"
    app:layout_constraintLeft_toLeftOf="@+id/constraintLayout_topic" />

<TextView
    android:id="@+id/content_topic"
    android:layout_width="193dp"
    android:layout_height="44dp"
    android:textAppearance="?attr/textAppearanceListItem"
    android:text="Description"
    android:layout_alignParentStart="true"
    app:layout_constraintTop_toTopOf="@+id/constraintLayout_topic"
    app:layout_constraintLeft_toRightOf="@+id/id_topic" />



</android.support.constraint.ConstraintLayout>
