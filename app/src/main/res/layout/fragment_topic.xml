<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_topic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/id_topic"
        android:layout_width="294dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:gravity="left|center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Title"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout_topic"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout_topic" />

    <TextView
        android:id="@+id/content_topic"
        android:layout_width="382dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:gravity="left|center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout_topic"
        app:layout_constraintTop_toBottomOf="@+id/id_topic"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="88dp"
        android:layout_height="44dp"
        app:srcCompat="@drawable/ic_arrow_down"
        android:id="@+id/ic_arrow_down"
        app:layout_constraintLeft_toRightOf="@+id/id_topic"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout_topic" />

</android.support.constraint.ConstraintLayout>
