<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/constraintLayout">

    <TextView
        android:id="@+id/date_event"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="Date"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/time_event"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="Time"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/date_event"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/title_event"
        android:layout_width="264dp"
        android:layout_height="44dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="Title"
        android:layout_alignParentStart="true"
        app:layout_constraintLeft_toRightOf="@+id/date_event"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/description_event"
        android:layout_width="264dp"
        android:layout_height="44dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:text="Description"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/title_event"
        app:layout_constraintLeft_toRightOf="@+id/time_event" />

</android.support.constraint.ConstraintLayout>
